<!-- Trigger button -->
<button class="px-4 py-2 bg-blue-500 text-white" onclick="toggleModal()">Start Adventure</button>

<!-- Modal -->
<div class="fixed z-10 inset-0 overflow-y-auto hidden" aria-labelledby="modal-title" role="dialog" aria-modal="true" id="adventureModal">
  <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
    
    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
    
    <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
      <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
        <h1>Start Your Food Truck Adventure!</h1>

        <%= form_with model: @adventure, local: true do |f| %>
          <%= f.label :phone_number %>
          <%= f.text_field :phone_number %><br>

          <%= f.label :food_preference %>
          <%= f.text_field :food_preference %><br>

          <%= f.label :number_of_trucks %>
          <%= f.number_field :number_of_trucks %><br>

          <%= f.label :adventure_day %>
          <%= f.date_field :adventure_day %><br>

          <%= f.label :adventure_start_time %>
          <%= f.time_field :adventure_start_time %><br>

          <%= f.submit "Begin Adventure" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
